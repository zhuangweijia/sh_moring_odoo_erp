<odoo>
    <data>
        <record id="view_designer_info_filter" model="ir.ui.view">
            <field name="name">designer</field>
            <field name="model">designer.info</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="field_ids"/>
                    <field name="skill_tag_ids"/>
                </search>
            </field>
        </record>

        <record id="view_designer_info_tree" model="ir.ui.view">
            <field name="name">designer</field>
            <field name="model">designer.info</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date"/>
                    <field name="field_ids" widget="many2many_tags"/>
                    <field name="skill_tag_ids" widget="many2many_tags"/>
                    <field name="status" widget="badge"
                        decoration-info="status == 'draft'"
                        decoration-success="status == 'confirm'"
                        decoration-danger="status == 'cancel'"
                        />
                </tree>
            </field>
        </record>

        <record id="view_designer_info_form" model="ir.ui.view">
            <field name="name">designer</field>
            <field name="model">designer.info</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" type="object" string="confirm"
                            attrs="{'invisible':[('status','!=','draft')]}" class='oe_highlight'/>
                        <button name="action_draft" type="object" string="back to draft"
                            attrs="{'invisible':[('status','!=','cancel')]}" class='btn-secondary'/>
                        <button name="action_cancel" type="object" string="cancel"
                            attrs="{'invisible':[('status','==','cancel')]}" class='btn-secondary'/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar" options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name of designer" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group string='Basic'>
                                <field name="recommendation_level" widget='priority'/>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="postal_address"/>
                                <field name="source"/>
                                <field name="intermediate_contact"/>
                                <field name="intermediate_agency"/>
                                <field name='is_trained'/>
                                <field name='lastest_trained_date'/>
                                <field name="bank_account_info"/>
                            </group>
                            <group string='Project'>
                                <field name="budget_unit"/>
                                <field name="budget_refer"/>
                                <field name="project_name_list"/>
                                <field name="collaboration_status"/>
                                <field name="current_project"/>
                                <field name="book"/>
                                <field name="book_status"/>
                                <field name="confirmed_date"/>
                            </group>
                        </group>
                        <group>
                            <group string='Description'>
                                <group>
                                    <field name="memo"/>
                                </group>
                            </group>
                            <group string='Tags'>
                                <!-- <field name="files" widget="many2many_binary"/> -->
                                <field name="type_id"/>
                                <field name="field_ids" widget="many2many_tags"/>
                                <field name="skill_tag_ids" widget="many2many_tags"/>
                                <field name="project_tag_ids" widget="many2many_tags"/>
                                <field name="product_tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Introduction">
                                <group>
                                    <field name="specialities"/>
                                    <field name="specialities_brief"/>
                                    <field name="style"/>
                                    <field name="brief_intro"/>
                                </group>
                                <group>
                                    <field name="endorsement"/>
                                </group>
                            </page>
                            <page string="Project">
                                <field name="project" type='html'/>
                            </page>
                            <page string="files">
                                <group>
                                    <field name="e_signature_pic" string='files'
                                        widget="many2many_binary"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="designer_info_action">
            <field name="name">designer</field>
            <field name="res_model">designer.info</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- 设计师类型 -->
        <record id="view_designer_type_tree" model="ir.ui.view">
            <field name="name">designer type</field>
            <field name="model">designer.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="view_designer_type_form" model="ir.ui.view">
            <field name="name">designer type</field>
            <field name="model">designer.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="designer_type_action">
            <field name="name">designer type</field>
            <field name="res_model">designer.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--设计师领域-->
        <record id="view_designer_field_tree" model="ir.ui.view">
            <field name="name">designer type</field>
            <field name="model">designer.field</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="view_designer_field_form" model="ir.ui.view">
            <field name="name">designer type</field>
            <field name="model">designer.field</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="designer_field_action">
            <field name="name">designer type</field>
            <field name="res_model">designer.field</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
