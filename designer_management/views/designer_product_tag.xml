<odoo>
    <data>
        <record id="view_designer_product_tag_tree" model="ir.ui.view">
            <field name="name">designer product tag</field>
            <field name="model">designer.product.tag</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="view_designer_product_tag_form" model="ir.ui.view">
            <field name="name">designer product tag</field>
            <field name="model">designer.product.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="designer_product_tag_action">
            <field name="name">designer product tag</field>
            <field name="res_model">designer.product.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
