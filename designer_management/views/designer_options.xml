
<odoo>
	<data>

        <!-- 设计师类型 -->
        <record id="view_designer_type_tree" model="ir.ui.view">
            <field name="name">designer type</field>
            <field name="model">designer.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="view_designer_type_form" model="ir.ui.view">
            <field name="name">designer type</field>
            <field name="model">designer.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="designer_type_action">
            <field name="name">designer type</field>
            <field name="res_model">designer.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--设计师领域-->
        <record id="view_designer_domain_tree" model="ir.ui.view">
            <field name="name">designer domain</field>
            <field name="model">designer.domain</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="view_designer_domain_form" model="ir.ui.view">
            <field name="name">designer domain</field>
            <field name="model">designer.domain</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="designer_domain_action">
            <field name="name">designer domain</field>
            <field name="res_model">designer.domain</field>
            <field name="view_mode">tree,form</field>
        </record>


	</data>
</odoo>
